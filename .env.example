# Cloudinary (required for profile image uploads)
# Create a Cloudinary account, then fill these values.
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional folder for profile images
CLOUDINARY_FOLDER=storetrack/profile-images

JWT_ACCESS_SECRET=
JWT_REFRESH_SECRET=
JWT_ACCESS_EXPIRES=1d    
JWT_REFRESH_EXPIRES=7d

CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-frontend-domain.vercel.app

# Email (SMTP) - required for forgot/reset password emails in production
# Example providers: Gmail (App Password)
APP_NAME=StoreTrack
FRONTEND_BASE_URL=http://localhost:3000
EMAIL_FROM=
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email verification OTP (6 digits)
EMAIL_VERIFICATION_OTP_TTL_MINUTES=10
EMAIL_VERIFICATION_OTP_MAX_ATTEMPTS=5

# Dev/testing only: return OTP in responses for automation
RETURN_EMAIL_OTP=false

# Optional SMTP test helper
# Run: pnpm email:test
# - Verifies SMTP auth/connectivity.
# - If EMAIL_TEST_SEND=true, sends a test email.
EMAIL_TEST_TO=
EMAIL_TEST_SEND=false

# Dev-only: return resetToken/resetUrl in forgot-password response for testing
RETURN_RESET_TOKEN=false
